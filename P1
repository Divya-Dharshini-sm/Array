#include <iostream>
using namespace std;

int main() {
    int n, i, searchElement, pos = -1;
    
    cout << "Enter number of elements in array: ";
    cin >> n;

    int arr[n]; 
    
     for (i = 0; i < n; i++) {
    cout << "Enter " << i+1 << " elements: ";
    cin >> arr[i];
    }


    cout << "\nArray elements are:\n";
    for (i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }

    cout << "\n\nEnter element to search: ";
    cin >> searchElement;

    for (i = 0; i < n; i++) {
        if (arr[i] == searchElement) {
            pos = i;
            break;
        }
    }

    if (pos != -1)
        cout << searchElement << " found at position " << pos + 1 << endl;
    else
        cout << searchElement << " not found in the array.\n";

    for (i = 0; i < n - 1; i++) {
        for (int j = i + 1; j < n; j++) {
            if (arr[i] > arr[j]) {
                int temp = arr[i];
                arr[i] = arr[j];
                arr[j] = temp;
            }
        }
    }

    cout << "\nArray after sorting in ascending order:\n";
    for (i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }

    cout << endl;
    return 0;
}
