#include <iostream>
using namespace std;

int main() {
    int arr[100], n, i, j, temp, search, flag = 0;

    cout << "Enter number of elements: ";
    cin >> n;

    cout << "Enter " << n << " elements: ";
    for (i = 0; i < n; i++) {
        cin >> arr[i];
    }

    cout << "\nArray elements are: ";
    for (i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
    cout << "\nEnter element to search: ";
    cin >> search;

    for (i = 0; i < n; i++) {
        if (arr[i] == search) {
            cout << "Element found at position " << i + 1 << endl;
            flag = 1;
            break;
        }
    }
    if (flag == 0)
        cout << "Element not found in the array.\n";

    for (i = 0; i < n - 1; i++) {
        for (j = 0; j < n - i - 1; j++) {
            if (arr[j] > arr[j + 1]) {
                temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }
    cout << "\nArray after sorting: ";
    for (i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;

    return 0;
}
